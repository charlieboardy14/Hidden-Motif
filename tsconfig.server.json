{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "./dist-server",
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["server/**/*.ts", "types.ts"],
  "exclude": ["node_modules", "dist"]
}